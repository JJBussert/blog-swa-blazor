    "database-type": "mssql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "Server=tcp:e13-bdo-test-db.database.windows.net,1433;Initial Catalog=dev;Persist Security Info=False;User ID=bdoadmin;Password=P@ssword!;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
